<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:background="#F1DBD4">

  <SearchView
      android:id="@+id/search_viewr"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#F1E9E9"
      android:iconifiedByDefault="false"
      android:queryHint="Search" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:context=".MainActivity"
      tools:layout_editor_absoluteX="-79dp"
      tools:layout_editor_absoluteY="115dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="Categories"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#DD6C92"
        android:textSize="40dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/c"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Cakes"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:text="view selection"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textSize="20dp"
        app:backgroundTint="#CCAD8A"
        app:cornerRadius="@android:dimen/thumbnail_width"
        app:iconTint="#716D6D" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gt"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Gateax"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:text="view selection"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textSize="20dp"
        app:backgroundTint="#CCAD8A"
        app:cornerRadius="@android:dimen/thumbnail_width"
        app:iconTint="#716D6D" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sv"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Savory Bites"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:text="view selection"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textSize="20dp"
        app:backgroundTint="#CCAD8A"
        app:cornerRadius="@android:dimen/thumbnail_width"
        app:iconTint="#716D6D" />

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
