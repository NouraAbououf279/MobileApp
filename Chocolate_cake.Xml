<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD9FA"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1DBD4"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:text="<"
            android:textSize="30dp"
            app:backgroundTint="#DD6C92"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="13dp" />

        <TextView
            android:layout_width="216dp"
            android:layout_height="37dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:text="Chocolate cake with nuts"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#090909"
            android:textColorHighlight="#A86E6E"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="69dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="411dp"
            android:layout_height="198dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="21dp"
            app:srcCompat="@drawable/ck"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="119dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="27dp"
            android:text="+"
            android:textSize="30dp"
            app:backgroundTint="#CCAD8A" />

        <Button
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="5dp"
            android:text="+"
            android:textSize="30dp"
            app:backgroundTint="#CCAD8A" />

        <Button
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="5dp"
            android:text="+"
            android:textSize="30dp"
            app:backgroundTint="#CCAD8A" />

        <Button
            android:layout_width="217dp"
            android:layout_height="66dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:text="Add to cart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textSize="25dp"
            app:backgroundTint="#CCAD8A"
            app:cornerRadius="@android:dimen/thumbnail_width"
            app:iconTint="#716D6D" />

    </LinearLayout>

    <RadioGroup

        android:id="@+id/radioGrp"
        android:layout_width="117dp"
        android:layout_height="203dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="346dp">


        <RadioButton

            android:id="@+id/sml"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Small"
            android:textSize="20dp"

            />

        <RadioButton

            android:id="@+id/med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Medium"
            android:textSize="20dp" />

        <RadioButton

            android:id="@+id/lar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Large"
            android:textSize="20dp" />

    </RadioGroup>

    <TextView
        android:layout_width="62dp"
        android:layout_height="29dp"
        android:orientation="horizontal"
        android:text="98 le"
        android:textSize="22dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="366dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="69dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:text="130 le"
        android:textSize="22dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="437dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="69dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:text="166 le"
        android:textSize="22dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="506dp" />



</androidx.constraintlayout.widget.ConstraintLayout>
